<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#303F9F"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="3000dp"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:background="#303F9F"
        app:srcCompat="@drawable/enablelogoazul" />

    <Button
        android:id="@+id/buttonVoluntario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="voluntarioForms"
        android:padding="16dp"
        android:text="Quero ser voluntário!"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="pacienteForms"
        android:padding="16dp"
        android:text="Quero uma mãozinha!"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />


</LinearLayout>